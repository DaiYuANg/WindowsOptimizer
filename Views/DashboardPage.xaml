<UserControl x:Class="WindowsControlPanel.Views.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mvvm="http://prismlibrary.com/"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mvvm:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="650"
             d:DesignWidth="980">
    <Grid Margin="20" Background="{DynamicResource ControlFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock FontSize="30" FontWeight="SemiBold" Text="控制台首页" />
            <TextBlock Margin="0,6,0,0"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       Text="先查看系统状态，再进入各模块进行深度调整。" />
        </StackPanel>

        <ui:Card Grid.Row="1"
                 Margin="0,0,0,16"
                 Padding="14"
                 Background="{DynamicResource ControlFillColorSecondaryBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock FontSize="16" FontWeight="SemiBold" Text="当前系统信息" />
                    <TextBlock Margin="0,6,0,0" Text="{Binding SystemInfoSummary, TargetNullValue=Loading...}" />
                    <TextBlock Margin="0,4,0,0"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               Text="{Binding LastRefreshTime}" />
                </StackPanel>
                <ui:Button Grid.Column="1"
                           Width="120"
                           Height="34"
                           Margin="12,0,0,0"
                           Appearance="Secondary"
                           Command="{Binding RefreshCommand}"
                           Content="刷新状态" />
            </Grid>
        </ui:Card>

        <UniformGrid Grid.Row="2" Columns="3" Rows="2">
            <ui:Card Margin="8" Padding="14">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <ui:SymbolIcon Symbol="ShieldLock24" Width="18" Height="18" Margin="0,0,6,0" />
                        <TextBlock FontSize="17" FontWeight="SemiBold" Text="安全与虚拟化" />
                    </StackPanel>
                    <TextBlock Margin="0,6,0,0" Text="{Binding SecuritySummary}" TextWrapping="Wrap" />
                    <ui:Button Margin="0,12,0,0"
                               Width="130"
                               Appearance="Primary"
                               Command="{Binding OpenSecurityCommand}"
                               Content="进入模块" />
                </StackPanel>
            </ui:Card>

            <ui:Card Margin="8" Padding="14">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <ui:SymbolIcon Symbol="Code24" Width="18" Height="18" Margin="0,0,6,0" />
                        <TextBlock FontSize="17" FontWeight="SemiBold" Text="开发环境" />
                    </StackPanel>
                    <TextBlock Margin="0,6,0,0" Text="WSL、开发者模式与容器相关配置。" TextWrapping="Wrap" />
                    <ui:Button Margin="0,12,0,0"
                               Width="130"
                               Appearance="Secondary"
                               Command="{Binding OpenDevelopmentCommand}"
                               Content="进入模块" />
                </StackPanel>
            </ui:Card>

            <ui:Card Margin="8" Padding="14">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <ui:SymbolIcon Symbol="GameController24" Width="18" Height="18" Margin="0,0,6,0" />
                        <TextBlock FontSize="17" FontWeight="SemiBold" Text="游戏优化" />
                    </StackPanel>
                    <TextBlock Margin="0,6,0,0" Text="偏性能优先的系统功能预设与切换。" TextWrapping="Wrap" />
                    <ui:Button Margin="0,12,0,0"
                               Width="130"
                               Appearance="Secondary"
                               Command="{Binding OpenGameCommand}"
                               Content="进入模块" />
                </StackPanel>
            </ui:Card>

            <ui:Card Margin="8" Padding="14">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <ui:SymbolIcon Symbol="Rocket24" Width="18" Height="18" Margin="0,0,6,0" />
                        <TextBlock FontSize="17" FontWeight="SemiBold" Text="启动与服务" />
                    </StackPanel>
                    <TextBlock Margin="0,6,0,0" Text="启动项、服务项和后台任务管理。" TextWrapping="Wrap" />
                    <ui:Button Margin="0,12,0,0"
                               Width="130"
                               Appearance="Secondary"
                               Command="{Binding OpenStartupCommand}"
                               Content="进入模块" />
                </StackPanel>
            </ui:Card>

            <ui:Card Margin="8" Padding="14">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <ui:SymbolIcon Symbol="Delete24" Width="18" Height="18" Margin="0,0,6,0" />
                        <TextBlock FontSize="17" FontWeight="SemiBold" Text="磁盘与清理" />
                    </StackPanel>
                    <TextBlock Margin="0,6,0,0" Text="缓存、临时文件与空间回收策略。" TextWrapping="Wrap" />
                    <ui:Button Margin="0,12,0,0"
                               Width="130"
                               Appearance="Secondary"
                               Command="{Binding OpenCleanupCommand}"
                               Content="进入模块" />
                </StackPanel>
            </ui:Card>

            <ui:Card Margin="8" Padding="14">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <ui:SymbolIcon Symbol="Globe24" Width="18" Height="18" Margin="0,0,6,0" />
                        <TextBlock FontSize="17" FontWeight="SemiBold" Text="网络与 DNS" />
                    </StackPanel>
                    <TextBlock Margin="0,6,0,0" Text="网络堆栈、DNS 和连接策略优化。" TextWrapping="Wrap" />
                    <ui:Button Margin="0,12,0,0"
                               Width="130"
                               Appearance="Secondary"
                               Command="{Binding OpenNetworkCommand}"
                               Content="进入模块" />
                </StackPanel>
            </ui:Card>
        </UniformGrid>
    </Grid>
</UserControl>
