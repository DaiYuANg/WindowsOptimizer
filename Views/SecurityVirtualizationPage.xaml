<UserControl x:Class="WindowsControlPanel.Views.SecurityVirtualizationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mvvm="http://prismlibrary.com/"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mvvm:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="620"
             d:DesignWidth="900">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,14">
            <TextBlock FontSize="24" FontWeight="SemiBold" Text="安全与虚拟化" />
            <TextBlock Margin="0,6,0,0"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       Text="统一管理 VBS、Hyper-V、WSL 相关能力。高风险操作会提示并需要管理员权限。" />
        </StackPanel>

        <ui:Card Grid.Row="1"
                 Margin="0,0,0,14"
                 Padding="14"
                 Background="{DynamicResource ControlFillColorSecondaryBrush}">
            <StackPanel>
                <TextBlock FontSize="15" FontWeight="SemiBold" Text="当前状态" />
                <TextBlock Margin="0,8,0,0" Text="{Binding VbsStatus}" />
                <TextBlock Margin="0,4,0,0" Text="{Binding AdminStatus}" />
                <TextBlock Margin="0,4,0,0" Text="{Binding RestartHint}" />
            </StackPanel>
        </ui:Card>

        <UniformGrid Grid.Row="2" Columns="2" Margin="0,0,0,14">
            <ui:Card Margin="0,0,8,0" Padding="14">
                <StackPanel>
                    <TextBlock FontSize="17" FontWeight="SemiBold" Text="开发模式预设" />
                    <TextBlock Margin="0,6,0,0" Text="启用 Hyper-V、WSL、VBS 等能力。适合开发/容器环境。" TextWrapping="Wrap" />
                    <ui:Button Margin="0,12,0,0"
                               Width="150"
                               Appearance="Primary"
                               Command="{Binding EnableDevModeCommand}"
                               Content="应用开发模式" />
                </StackPanel>
            </ui:Card>

            <ui:Card Margin="8,0,0,0" Padding="14">
                <StackPanel>
                    <TextBlock FontSize="17" FontWeight="SemiBold" Text="游戏模式预设" />
                    <TextBlock Margin="0,6,0,0" Text="关闭虚拟化链路并优先兼容游戏性能。适合纯娱乐场景。" TextWrapping="Wrap" />
                    <ui:Button Margin="0,12,0,0"
                               Width="150"
                               Appearance="Danger"
                               Command="{Binding EnableGameModeCommand}"
                               Content="应用游戏模式" />
                </StackPanel>
            </ui:Card>
        </UniformGrid>

        <ui:Card Grid.Row="3" Padding="14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" FontSize="15" FontWeight="SemiBold" Text="执行日志" />

                <TextBox Grid.Row="1"
                         Margin="0,8,0,8"
                         Text="{Binding ExecutionLog}"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         IsReadOnly="True"
                         AcceptsReturn="True" />

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <ui:Button Width="110" Margin="0,0,8,0" Appearance="Secondary" Command="{Binding RefreshCommand}" Content="刷新状态" />
                    <ui:Button Width="110" Appearance="Secondary" Command="{Binding BackToHomeCommand}" Content="返回首页" />
                </StackPanel>
            </Grid>
        </ui:Card>
    </Grid>
</UserControl>
